<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
<html>
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1" />
		<title>Untitled Document</title>
	</head>
	<body>
		<% @title = 'Documents' %>
<table>
	<tr>
		<td style='width: 40%; vertical-align: top;'>
			<strong>Folders</strong>
			<ul>
			<% @folders.each do |f| %>
				<li>
					<%= link_to f.title, :action => :index, :folder_id => f.id %> (<%= link_to 'X', {:action => :delete, :folder_id => f.id, :id =>'1'}, :confirm => 'Are you sure you want to delete this Folder?' %>)
					<%= render :partial => 'folders', :locals => {:folder => f} %>
				</li>
			<% end %>
			</ul>
		</td>
		<td style='vertical-align: top;'>
			<strong>All Documents</strong>
			<%= render :partial => 'file_list' %>
		</td>
	</tr>
</table>

		<div>
		<% form_tag ({ :action => 'new_folder'}, :multipart => true) do %>
		<fieldset>
		<legend>Create new folder:</legend>
		<div>
			<label for="new_folder">New Folder:</label>
			<%= text_field_tag :new_folder %>
		</div>

		<div>
			<%= submit_tag "Create" %>
		</div>
		</fieldset>
		<% end %>
		<div>


		<div>
		<% form_tag ({ :action => 'send_upload'}, :multipart => true) do %>
		<fieldset>
		<legend>Upload files to this folder</legend>
		<div>
			<label for="upload_file">File:</label>
			<%= file_field_tag :upload_file %>
		</div>

		<div>
			<%= submit_tag "Upload" %>
		</div>
		</fieldset>
		<% end %>
		<div>
		
	</body>
</html>

