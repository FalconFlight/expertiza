<h1>New Microtask</h1>

<% form_tag( {:action => 'create'}, :onsubmit => 'return checkForm();', :onload => 'addElement();')do %>
  <%= render :partial => 'content' %>
  <hr/>
  <%= render :partial => 'due_dates' %>
  <% if @course != nil %>
  	<%= hidden_field_tag('microtask[course_id]', @course.id) %>
  <% else %>
    <%= hidden_field_tag('microtask[course_id]', nil) %>
  <% end %>
  &nbsp;&nbsp;<%= submit_tag "Save Microtask", :name=>"save" %>
<% end %>
<br />
<div style="padding: 15px">
<%= render :partial => '/shared_scripts/back' %>
</div>