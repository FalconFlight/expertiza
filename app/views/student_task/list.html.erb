<h1>Assignments</h1>
<br/>
<div class="flash_note">To begin, click on an assignment from the list above or <%= link_to 'click here', :controller => 'publishing', :action => 'view' %> to set <b>publishing rights</b> for your work.</div>
<br/>
<table class="listing" cellpadding=2>
  <tr>
	<th>&nbsp;</th>
	<th><%= link_to 'Assignment',:controller=>"student_task",:action=>"list",:sort_by=>"assignment"  %></th>
    <th><%= link_to 'Course',:controller=>"student_task",:action=>"list",:sort_by=>"courses"  %></th>
    <th><%= link_to 'Topic',:controller=>"student_task",:action=>"list",:sort_by=>"topic"  %></th>
    <th><%= link_to 'Current Stage',:controller=>"student_task",:action=>"list",:sort_by=>"current_stage"  %></th>
    <th><%= link_to 'Stage Deadline',:controller=>"student_task",:action=>"list",:sort_by=>"stage_deadline"  %></th>
    <th><%= link_to 'Publishing Rights',:controller=>"student_task",:action=>"list",:sort_by=>"publishing_rights"  %></th>
   </tr>
	
  <% for participant in @participants %>
    <% if participant.assignment != nil %>
      <tr class="listingRow">
	    <td>&nbsp;</td>
	    <td><%= link_to participant.assignment.name, :action => 'view', :id => participant %></td>
	    <td><%= participant.get_course_string %></td>
	    <td><%= participant.get_topic_string %></td>
        <td><%= participant.assignment.get_current_stage(participant.topic_id) %></td>
	    <td><%= participant.assignment.get_stage_deadline(participant.topic_id) %></td>
	    <td align=center><%= participant.get_publishing_rights %></td>
      </tr>
    <% end %>
  <% end %>
</table>
