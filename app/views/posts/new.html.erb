<h1>New post</h1>

<% form_for(@post) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
	
  </p>
  <p>
    <%= f.label :parentpostid %><br />
    <%= f.text_field :parentpost %>
  </p>
  <p>
    <%= f.label :posttext %><br />
    <%= f.text_area :posttext %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', posts_path %>