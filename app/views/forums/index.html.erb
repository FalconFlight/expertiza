<h1>Forums</h1> 

<table>
  <tr>
  	
    <%= yield(:head) %>
    <th width="70%">Forum</th>
    <th width="30%">Created By</th> 
	<th width="30%">Actions</th>
  </tr>
  <% for forum in @forums %>
    <tr>
      <td width="70%"><h4><%= link_to h(forum.name), :controller => 'forums', :action => :show, :forum => forum %></h4>
        <small><%= forum.topics.count %> topics</small><br />
        <%=h forum.description %></td>
        <td class="right"><% if forum.most_recent_post %> <%= link_to forum.most_recent_post.user.name, "/users/#{forum.most_recent_post.last_poster_id}" %> <% else %>no posts<% end %></td>
        <% if session[:user].role.name == "Super-Administrator" %>
        <td><%= link_to "Edit", :controller => 'forums', :action => :edit, :forum =>forum %></td>
        <td><%= link_to "Destroy", :controller => 'forums', :confirm => 'Are you sure?', :action => :destroy, :forum => forum %></td>
        <% else %>
		<td></td>
		
		<% end %>
	</tr>
  <% end %>
</table>
<% if session[:user].role.name == "Super-Administrator" %>
<p><%= link_to "New Forum", "/forums/new" %></p>
<%end%>
