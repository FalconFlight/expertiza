<%
   	files = @microtaskparticipant.get_files(@microtaskparticipant.get_path )
%>

<b><h2>Submitted Files</h2></b>
<% if files.length > 0  %>
	<tr><td>&nbsp;</td><td><div id="1_myDiv"><%= display_microtask_submitted_files(@microtaskparticipant, files, false) %> </div></td></tr>
<% else %>
No files have been submitted.
<% end %>
