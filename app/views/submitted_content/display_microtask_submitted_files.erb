<%  if (@microtaskparticipant.submitted_hyperlink != nil) %>
<div id="url" style="">
	<ul>	
       <li><a href="<%=  @microtaskparticipant.submitted_hyperlink %>" target="new"><%= @microtaskparticipant.submitted_hyperlink %></a></li>
        </ul>
